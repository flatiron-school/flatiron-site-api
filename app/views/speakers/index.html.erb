<h1>Listing speakers</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>Screen name</th>
    <th>Job title</th>
    <th>Profile img url</th>
    <th>Bio</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @speakers.each do |speaker| %>
  <tr>
    <td><%= speaker.full_name %></td>
    <td><%= speaker.screen_name %></td>
    <td><%= speaker.job_title %></td>
    <td><%= speaker.profile_img_url %></td>
    <td><%= speaker.bio %></td>
    <td><%= speaker.position %></td>
    <td><%= link_to 'Show', speaker %></td>
    <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
    <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

