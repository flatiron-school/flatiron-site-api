<p id="notice"><%= notice %></p>

<p>
  <b>Img Url:</b>
  <%= @event.img.url %>
<p>
  <b>Img:</b>
  <%= image_tag @event.img.url %>
  <%= image_tag @event.img.url(:medium) %>
  <%= image_tag @event.img.url(:thumb) %>
</p>

<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

